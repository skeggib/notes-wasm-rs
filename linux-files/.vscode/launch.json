    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "linux-files server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=linux-files",
                    "--package=linux-files"
                ],
                "filter": {
                    "name": "linux-files",
                    "kind": "bin"
                }
            },
            "args": [
                "/root/server",
                "server"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands":["settings set target.disable-aslr false"]
        }
    ]
}